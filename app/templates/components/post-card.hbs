

<div class="post" {{action 'viewPost' post}}>
    <span class="title"> {{post.title}} </span> <span class="author"> by {{post.author}} </span> <span class="edit-post" {{action 'preventDefault'}}> {{#link-to 'myposts.edit' post}} edit {{/link-to}} </span>
    <div class="desc"> {{post.content}} </div>
    <ul class="tags"> {{#each post.tagsArray as |tag|}} <li> {{tag}} </li> {{/each}} </ul>
</div>

{{yield}}