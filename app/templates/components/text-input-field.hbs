<div class="input-row">
  <label class="label">{{label}} </label>
  <div class="field">
    {{#if textarea}}
        {{textarea class=inputClassName value=value}}
    {{else}}
        {{input class=inputClassName value=value key-up=onchange}}
    {{/if}}
  </div>
  {{#if errorMessage}}
    <div class="error-msg">
      {{errorMessage}}
    </div>
  {{/if}}
</div>

{{yield}}