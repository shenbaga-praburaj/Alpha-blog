<div class="modal">
    <div class="modal-dialogue">
       <div class="modal-content">
        
            <div class="modal-header">
                <h2> {{#if edit}} Edit {{else}} New {{/if}} Post </h2>
                <span class="close"> {{#link-to 'myposts'}} X {{/link-to}} </span>
            </div>

            <div> Title </div>
            {{input class="title" value=post.title}}

            <div> Content </div>
            {{textarea class="content" value=post.content}}

            <div> Tags </div>
            {{input class="title" value=post.tags}}

            <div class="save-btn-container">
                <button class="btn-save-post" {{action 'savePost'}}> Save </button>
            </div>
       </div>
    </div>
</div>

{{yield}}