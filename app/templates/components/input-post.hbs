<div class="modal">
    <div class="modal-dialogue">
       <div class="modal-content">
        
            <div class="modal-header input">
                <h2> {{#if edit}} Edit {{else}} New {{/if}} Post </h2>
                <span class="close" {{action 'close'}}> X </span>
            </div>

            {{valid-input label='Title' className="text-input-large" attrName='title' value=post.title errorMessage=(and showError (v-get post 'title' 'message'))}}

            {{valid-input label='Content' className="text-area-large" attrName='content' value=post.content textarea=true errorMessage=(and showError (v-get post 'content' 'message'))}}

            {{valid-input label='Tags' className="text-input-large" attrName='tags' value=post.tags}}

            {{valid-input label='Author' className="text-input-large" attrName='author' value=post.author}}

            <div class="save-btn-container">
                <button class="btn-save-post" {{action 'savePost'}}> Save </button>
            </div>
       </div>
    </div>
</div>

{{yield}}